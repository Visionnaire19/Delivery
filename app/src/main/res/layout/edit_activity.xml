<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#333335">

        <TextView
            android:layout_width="300dp"
            android:fontFamily="sans-serif-black"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:text="Edit your profile"
            android:textColor="@color/White"
            android:gravity="center"
            android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        card_view:cardCornerRadius="10dp"
        android:layout_width= "150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/scover_item"
                android:scaleType="centerCrop"
                android:src="@drawable/d"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="240dp"
            android:gravity="center"
            android:id="@+id/no"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/sNumber"
                android:layout_width="300dp"
                android:textColor="@color/White"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="Numero de telephone"
                android:inputType="number"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/one"
            android:layout_below="@id/no"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/sLocation1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/White"

                android:hint="Emplacement"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/Save"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="500dp"
            android:background="@drawable/btn_new"
            android:text="save"
            android:textColor="@color/White"
            android:textAllCaps="false" />

        <ProgressBar
            android:id="@+id/sprogressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="500dp" />



</RelativeLayout>