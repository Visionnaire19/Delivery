<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#DE000000"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/hi"
        android:layout_marginTop="10dp"
        android:layout_width="170dp"
        android:layout_centerHorizontal="true"
        android:layout_height="170dp">
        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/img1"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_img"
            />
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_marginTop="90dp"
        android:layout_below="@id/hi"
        android:id="@+id/input"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:hint="Description(Jogging,jupe,pantalon,...)"
            android:id="@+id/name1"
            android:maxLines="1"
            android:textColor="#FFF"
            android:inputType="text"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="150dp"
        android:layout_marginTop="160dp"
        android:layout_below="@id/hi"
        android:id="@+id/input1"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/price1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="Prix unitaire"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#DDD" />

    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/input"
            android:id="@+id/spinner"
            android:layout_toRightOf="@id/input1"
            android:layout_marginLeft="14dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/size1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint="Pointure"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#DDD" />

        </com.google.android.material.textfield.TextInputLayout>




        <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Choose an Image"
        android:id="@+id/choose1"
        android:textColor="#FFF"
        android:layout_below="@id/hi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn"
        android:textAllCaps="false"
        android:textSize="16sp"/>

    <Button
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/transparent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_below="@id/input1"
        android:textColor="#FFF"
        android:text="Upload"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:id="@+id/upload1"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prog1"
        android:layout_below="@id/input1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>



    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/info"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_help"
        />
    <CheckBox
        android:layout_width="130dp"
        android:id="@+id/mens"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"
        android:text="MEN"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:layout_below="@id/spinner"


        />

    <CheckBox
        android:layout_width="130dp"
        android:id="@+id/womens"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_below="@id/spinner"
        android:text="WOMEN"
        android:textSize="16sp"
        android:textColor="#FFF"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Genre :"
        android:textSize="17dp"
        android:textColor="@color/White"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/spinner"
        android:layout_marginTop="18dp"/>

</RelativeLayout>


    </androidx.core.widget.NestedScrollView>